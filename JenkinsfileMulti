pipeline {
    agent any
    tools {
        maven 'Maven'
    }    
    stages {
        stage("test") {
            steps {
                script {
                   echo "Testing the application"
                }
            }
        }
        stage("build") {
             when {
                    expression {
                         BRANCH_NAME=="main"         
             }
             
          }   
            steps {
                script {
                    echo "building jar"
                  
                }
            }
        }
        stage("deploy") {
             when {
                    expression {
                         BRANCH_NAME=="main"         
             }
             
          } 
            steps {
                script {
                    echo "deploying"
                    
                }
            }
        }
    }   
}
